extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Joe's Portfolio

      p.lead.text-light
        | Please feel free to browse my Javascript projects!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(class='link' href= `project/${project.id}`)
            img.thumbnail(src= project.coverphoto_url)
            h6 #{project.project_name}